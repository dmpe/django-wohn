{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "isort",
        "type": "shell",
        "command": "isort -rc ."
      },
      {
        "label": "Docker build",
        "type": "shell",
        "command": "docker build -t dj-wohn .",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "black",
        "type": "shell",
        "command": "black ."
      },
      {
        "label": "flake8",
        "type": "shell",
        "command": "flake8 ."
      },
      {
        "label": "Test",
        "dependsOrder": "sequence",
        "dependsOn": [
          "isort",
          "black",
          "flake8"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
}
