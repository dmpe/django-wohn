{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "isort",
        "type": "shell",
        "command": "isort -rc ."
      },
      {
        "label": "Docker Backend",
        "type": "shell",
        "command": "docker build -t django-wohn-backend backend/",
        "problemMatcher": []
      },
      {
        "label": "Docker Frontend",
        "type": "shell",
        "command": "docker build -t django-wohn-frontend frontend/",
        "problemMatcher": []
      },
      {
        "label": "black",
        "type": "shell",
        "command": "black . --target-version py37"
      },
      {
        "label": "flake8",
        "type": "shell",
        "command": "flake8 ."
      },
      {
        "label": "Format",
        "dependsOrder": "sequence",
        "dependsOn": [
          "isort",
          "black",
          "flake8"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "label": "Build docker images",
        "dependsOrder": "parallel",
        "dependsOn": [
          "Docker Backend",
          "Docker Frontend"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}
