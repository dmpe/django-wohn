{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "isort",
        "type": "shell",
        "command": "isort -rc ${workspaceRoot} --apply"
      },
      {
        "label": "Docker Backend",
        "type": "shell",
        "command": "docker build -t django-wohn-backend:latest backend/",
        "problemMatcher": []
      },
      {
        "label": "Docker Frontend",
        "type": "shell",
        "command": "docker build -t django-wohn-frontend:latest frontend/",
        "problemMatcher": []
      },
      {
        "label": "black",
        "type": "shell",
        "command": "black ${workspaceRoot}/backend --config ${workspaceRoot}/backend/pyproject.toml"
      },
      {
        "label": "flake8",
        "type": "shell",
        "command": "flake8 ${workspaceRoot}/backend"
      },
      {
        "label": "JS/TS format",
        "type": "shell",
        "command": "eslint ${workspaceRoot}/frontend"
      },
      {
        "label": "Format",
        "dependsOrder": "sequence",
        "dependsOn": [
          "isort",
          "black",
          "flake8",
          "JS/TS format",
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "label": "Build docker images",
        "dependsOrder": "parallel",
        "dependsOn": [
          "Docker Backend",
          "Docker Frontend"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
}
